<div
    class="grid-stack-item"
    id="widget_{{ widget.id }}"
    gs-id="{{ widget.id }}"
    gs-x="{{ widget.x }}"
    gs-y="{{ widget.y }}"
    gs-w="{{ widget.width }}"
    gs-h="{{ widget.height }}"
>
    <div class="card border-primary grid-stack-item-content">
        {% block card_header %}
            <div class="card-header text-primary">
                <div class="float-start">
                    <h5 class="card-title w-100">
                        {% block widget_title %}
                            <input
                                    type="text" value="{{ widget.title | default(widget.name | trans) }}"
                                    class="lle-dashboard-input-title text-truncate w-100" readonly="readonly"
                                    data-widgetid="{{ widget.id }}" id="lle-dashboard-input-{{ widget.id }}">
                        {% endblock widget_title %}
                    </h5>
                </div>

                <div class="float-end">
                    {% block widget_buttons %}
                        {% include('@LleDashboard/widget/includes/_buttons.html.twig') with {widget: widget} %}
                    {% endblock widget_buttons %}
                </div>
            </div>
        {% endblock card_header %}

        {% block card_body %}
            <div class="card-body">
                {% block widget_body %}{% endblock widget_body %}
            </div>
        {% endblock card_body %}

        {% block widget_config %}
            {{ include('@LleDashboard/widget/includes/_config.html.twig') }}
        {% endblock widget_config %}

        {% block card_footer %}
            {# <div class="card-footer"></div> #}
        {% endblock card_footer %}
    </div>
</div>
